# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/driftix

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_CERT_URL=your-client-cert-url

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3001

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Security Configuration
DEBUG=true
API_TIMEOUT=30000 # 30 seconds

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com
HEALTH_CHECK_EMAIL=health-check@example.com

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# External API Keys
OPENCORPORATES_API_KEY=your_opencorporates_api_key
IRS_API_KEY=your_irs_api_key
GOOGLE_API_KEY=your_google_api_key
IDME_API_KEY=your_idme_api_key
DMV_API_KEY=your_dmv_api_key
CHECKR_API_KEY=your_checkr_api_key
DOCUMENT_VERIFY_API_KEY=your_document_verify_api_key
CLOUDMERSIVE_API_KEY=your_cloudmersive_api_key
MINDEE_API_KEY=your_mindee_api_key
LICENSE_VERIFY_API_KEY=your_license_verify_api_key

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_DOCUMENT_VERIFICATION=true
ENABLE_BACKGROUND_CHECKS=true
ENABLE_FACIAL_RECOGNITION=true
ENABLE_AI_INTERVIEW=true

# Health Check URLs
CDN_BASE_URL=https://cdn.example.com
MAPS_API_URL=https://maps-api.example.com/health
WEATHER_API_URL=https://weather-api.example.com/health
ANALYTICS_API_URL=https://analytics-api.example.com/health
BACKUP_SERVICE_URL=https://backup-service.example.com/status

# Service Tokens
BACKUP_SERVICE_TOKEN=your-backup-service-token
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_ALERT_CHANNEL=#health-alerts
ALERT_THRESHOLD=3 